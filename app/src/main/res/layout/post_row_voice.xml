<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>
    <variable
        name="postvoicexml"
        type="com.example.cameraprovider.model.Post" />
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="H,1:1.45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_camera">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewPost"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_camera"
                app:strokeWidth="10px"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_corner" />


            <rm.com.audiowave.AudioWaveView
                android:id="@+id/wave"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                app:animateExpansion="false"
                app:chunkWidth="3dp"
                app:chunkHeight="24dp"
                app:minChunkHeight="2dp"
                app:chunkSpacing="1dp"
                app:chunkRadius="2dp"
                app:touchable="true"
                app:progress="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgAvtUserPost"
                app:waveColor="@color/dark" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/wave"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/play"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:text="PhÃ¡t"
                    android:focusable="true"
                    android:textColor="@color/white" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="00:00"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center" />
            </LinearLayout>



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvtUserPost"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/imageViewPost"
                app:layout_constraintTop_toTopOf="@+id/imageViewPost"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/key"
                app:strokeWidth="3dp" />

            <TextView
                android:id="@+id/tv_Name_UserPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxLength="12"
                android:paddingVertical="1dp"
                android:paddingHorizontal="6dp"
                android:textColor="@color/dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imgAvtUserPost"
                app:layout_constraintTop_toTopOf="@+id/imgAvtUserPost"
                app:layout_constraintBottom_toBottomOf="@id/imgAvtUserPost"/>


            <TextView
                android:id="@+id/tv_Desc_Post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="8dp"
                android:maxLength="300"
                android:maxLines="8"
                android:paddingVertical="2dp"
                android:scrollbars="vertical"
                android:text="@{postvoicexml.content}"
                android:textColor="@color/dark"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageViewPost"/>

            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.56sp"
                android:layout_marginEnd="4dp"
                android:textColor="@android:color/black"
                android:layout_gravity="end|center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/btn_group_react"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:background="@drawable/boderdialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameUserLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:text="KhÃ´ng cÃ³ hoáº¡t Ä‘á»™ng nÃ o ðŸ’–"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#E6A5A5A5" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>