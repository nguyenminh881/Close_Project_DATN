<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mviewmodel"
            type="com.example.cameraprovider.viewmodel.MessageViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gửi riêng cho bạn bè:"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="@={mviewmodel.messagesend}"
            android:backgroundTint="@color/bg_input"
            android:background="@drawable/corner_radius_16dp"
            android:hint="Nhập tin nhắn..."
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Gửi đến:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>
</layout>