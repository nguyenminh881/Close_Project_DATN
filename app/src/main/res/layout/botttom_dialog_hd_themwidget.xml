<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C0C0C"
        android:orientation="vertical"
        android:padding="16dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <Button
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            app:backgroundTint="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Hướng dẫn tạo Widget"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước 1: Ấn giữ vào màn hình, chọn Wiget hoặc Tiện ích"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/image11"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước 2: Kéo tìm tới ứng dụng Close"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/image21"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước 3: kéo và thả Wiget ra màn hình có đủ chỗ trống"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/image31"
                    android:layout_width="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>