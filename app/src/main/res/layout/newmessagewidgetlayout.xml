<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutwidgetMess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbd10dp"
    android:backgroundTint="@color/white"
    android:minWidth="110dp"
    android:minHeight="110dp">


    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/key"
            android:layout_gravity="center_vertical"
            android:background="@drawable/avt_circle"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/avt_base" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4B101010"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/corner_radius_16dp"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tv_Name_UserPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Tên người dùng"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:maxLines="3"
                android:text="Nội dung tin nhắn"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/createAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginHorizontal="4dp"
        android:layout_gravity="bottom|end"
        android:textColor="@color/dark"
        android:textSize="14sp" />
</FrameLayout>